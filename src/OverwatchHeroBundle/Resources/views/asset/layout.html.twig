<!DOCTYPE html>
<html>
    <head>
	{% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}" />
		<link rel="stylesheet" href="{{ asset('assets/font-awesome/css/font-awesome.min.css') }}">
		<link rel="stylesheet" href="{{ asset('assets/css-custom.css') }}">
	{% endblock %}

  	<meta charset="utf-8">
  
          	<title>
            	{% block title %}
        		{% endblock %}
        		 - OverwatchHeroes
     		</title>
  	</head>
  <body>	 
       	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
	       	<img src="/public/ow.png" width="35" height="30" alt="">
	      	&nbsp
	  	<a class="navbar-brand" href="{{ path('overwatch_list') }}">Overwatch Heroes</a>
	  	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
	    		<span class="navbar-toggler-icon">
	    		</span>
	  	</button>

	  	<div class="collapse navbar-collapse" id="navbarNavDropdown">
	    		<ul class="navbar-nav">
			      	<li class="nav-item active">
			        		<a class="nav-link" href="{{ path('overwatch_list') }}">
			        			Accueil
			        			<span class="sr-only">
			        				(current)
			        			</span>
			        		</a>
			      	</li>

              			<li class="nav-item active">
                <a class="nav-link" href="{{ path('comparator') }}">
                 Random Versus
                </a>
              </li>

			      	<li class="nav-item dropdown">
			        		<a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">Catégories</a>

			  <div id="sidebar">
      		
			    {{ render(controller(
			        'OverwatchHeroBundle:CategoryMenu:categoryMenu'
			    )) }}
			    </div>
			      	</li> 

			      	{% if is_granted('ROLE_ADMIN') %}
				          	<li class="nav-item">
				          		<a class="nav-link" href="{{ path('admin') }}"> Admin</a>
				          	</li>
			      {% endif %}
			</ul>
		      	<ul class="navbar-nav ml-auto">
		            	
			               {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
			                	<li class="nav-item">
			                    		<a class="nav-link" href="{{ path('login') }}"> Se connecter</a>
			                    	</li>
			                    	<li class="nav-item">
			                    		<a class="nav-link" href="{{ path('user_register') }}"> S'inscrire</a>
			                    	</li>
			                	{% else  %}
			                	<li class="nav-item">
			                    		<a class="nav-link" href="{{ path('logout') }}"> Se déconnecter ({{ app.user.username }})</a>
			                    	</li>
			               {% endif %}
			</ul>
	  	</div>
	</nav>
                
    
        <div class="jumbotron">
        	{% block content %}
        	{% endblock %}
        </div>

  {% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
    </script>     
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous">
    </script>     
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous">
    </script>     
    <script type="text/javascript" src="{{ asset('assets/js/customjs.js') }}"></script>
  {% endblock %}

    </body>
</html>