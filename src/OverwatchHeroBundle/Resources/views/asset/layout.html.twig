<!DOCTYPE html>
<html>
    <head>
	{% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}" />
	{% endblock %}

	
	 
       	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	       	<img src="/public/ow.png" width="35" height="30" alt="">
	      	&nbsp
	  	<a class="navbar-brand" href="http://localhost:1337/">Overwatch Heroes</a>
	  	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
	    		<span class="navbar-toggler-icon"></span>
	  	</button>

	  	<div class="collapse navbar-collapse" id="navbarNavDropdown">
	    		<ul class="navbar-nav">
			      	<li class="nav-item active">
			        		<a class="nav-link" href="http://localhost:1337/">
			        			Home
			        			<span class="sr-only">(current)</span>
			        		</a>
			      	</li>

			      	<li class="nav-item dropdown">
			        		<a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">Catégories</a>

				        	<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
					            <a class="dropdown-item" href="#">Attaquant</a>
					            <a class="dropdown-item" href="#">Défenseurs</a>
					            <a class="dropdown-item" href="#">Tanks</a>
					            <a class="dropdown-item" href="#">Soutiens</a>
				        	</div>
			      	</li> 

			      	{% if is_granted('ROLE_ADMIN') %}
				          	<li class="nav-item">
				          		<a class="nav-link" href="{{ path('admin') }}"> Admin</a>
				          	</li>
			      {% endif %}
			</ul>
		      	<ul class="navbar-nav ml-auto">
		            	
			               {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
			                	<li class="nav-item">
			                    		<a class="nav-link" href="{{ path('login') }}"> Se connecter</a>
			                    	</li>
			                    	<li class="nav-item">
			                    		<a class="nav-link" href="{{ path('user_register') }}"> S'inscrire</a>
			                    	</li>
			                	{% else  %}
			                	<li class="nav-item">
			                    		<a class="nav-link" href="{{ path('logout') }}"> Se déconnecter ({{ app.user.username }})</a>
			                    	</li>
			               {% endif %}
			</ul>
	  	</div>
	</nav>
        
           <meta charset="utf-8">
	
        	{% block head %}
        	{% endblock %}

         	<title>
         		{% block title %}
     		{% endblock %} - OverwatchHeroes
     	</title>
    </head>
    <body>
        <div>
        	{% block content %}
        	{% endblock %}
        </div>

  {% block javascripts %}
