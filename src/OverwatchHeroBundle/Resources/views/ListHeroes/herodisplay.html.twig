
<div class="col-sm-6 ">
	<div class="card marginAuto" style="width: 20rem;">
		<div class="card-body">
			<h4 class="card-title">{{ currentCategory.categoryName }}</h4>	    	
			<ul class="list-group list-group-flush">
					{% for currentHero in currentCategory.heroes %}
						<li class="list-group-item">
							<a href="{{ path('overwatch_detail', {heroId:currentHero.id}) }}">
								{{ currentHero.name }}
							</a>
						</li>
					{% else %}
				
						<li>Aucun Héros Trouvé</li>
				
					{% endfor %}
			</ul>
		</div>
	</div>
</div>