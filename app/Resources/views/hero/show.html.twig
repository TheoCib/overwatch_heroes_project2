{% extends 'OverwatchHeroBundle:asset:layout.html.twig' %}
{% block content %}
    <h1>Hero</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hero.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hero.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_hero_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_hero_edit', { 'id': hero.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
